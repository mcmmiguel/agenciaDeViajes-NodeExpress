extends ./layout/index
block contenido
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}
        .row 

            h2.d-block.w-100.text-center Agrega un testimonial

            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimoniales" method="POST")
                        .form-group
                            label(for="nombre") Nombre
                            input#number(type="text", placeholder="Nombre", name="nombre", class="form-control") 
                        .form-group
                            label(for="correo") Correo electronico
                            input#correo(type="text", placeholder="Correo", name="correo", class="form-control") 
                        .form-group
                            label(for="mensaje") Mensaje
                            textarea#mensaje(placeholder="Mensaje", name="mensaje", class="form-control", rows=3) 

                        input.btn.btn-success.btn-block(type="submit")